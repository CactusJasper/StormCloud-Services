<div class="row justify-content-center mt-5">
    <div class="col-8 my-5 mx-2 p-4">
        <div class="row justify-content-center">
            {{#ifCond superUser '==' true}}
                <div class="col-8 p-4 my-3 bg center bg-core">
                    <h1 class="center header">Dashboard</h1>
                    <div class="row justify-content-center">
                        <div class="col-4 p-4 mx-2 center">
                            <h3 class="mb-3">Manage Roles</h3>
                            <a href="/admin/manage/role/rewards" class="text-colour" style="text-decoration: none; line-height: 32px;">Manage Role Rewards</a><br/>
                            <a href="/admin/manage/role/mods" class="text-colour" style="text-decoration: none; line-height: 32px;">Manage Moderation Rewards</a>
                        </div>
                        <div class="col-4 p-4 mx-2 center">
                            <h3 class="center mb-3">Manage Polls</h3>
                            <a href="/admin/approve/polls" class="text-colour" style="text-decoration: none; line-height: 32px;">Approve Requested Polls</a><br/>
                            <a href="/admin/manage/polls" class="text-colour" style="text-decoration: none; line-height: 32px;">Manage All Polls</a><br/>
                            <a href="/admin/create/poll" class="text-colour" style="text-decoration: none; line-height: 32px;">Create a Poll</a>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="col-6 p-4 my-3 mx-2 bg-core">
                    <h1 class="center header">Dashboard</h1>
                    <div class="row justify-content-center">
                        <div class="col-4 p-4 mx-2 center">
                            <h3 class="center mb-3">Admin Tools</h3>
                            <a href="/admin/create/poll" class="text-colour" style="text-decoration: none; line-height: 32px;">Create a Poll</a>
                        </div>
                    </div>
                </div>
            {{/ifCond}}
        </div>
    </div>
</div>
<script src="/js/admin/dashboard.js"></script>