{{#if user}}
<div class="row justify-content-center">
    <div class="col-9 p-4 mt-5 bg-core">
        <h3 class="center header">Applications</h3>
        {{#if sessionFlash.message}}
            {{#contains sessionFlash.type 'error'}}
                <div id="errors" class="alert alert-danger mx-5 my-4">
                    {{{sessionFlash.message}}}
                </div>
            {{/contains}}
        {{/if}}
        <div id="applications-display">
            
        </div>
    </div>
</div>
<script src="/js/home.js"></script>
{{else}}
    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="Description" content="Unnamed Pad is a website designed for people to write storys freely.">
            <title>StormCloud</title>
            <!-- CSS -->
            <link rel="stylesheet" href="/css/main.css"/>
            <link rel="stylesheet" href="/css/grid.css"/>
            <link rel="stylesheet" href="/css/utils.css"/>
            <!-- JavaScript -->
            <script type="module" src="https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.esm.js"></script>
            <script nomodule="" src="https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.js"></script>
            {{> theme}}
        </head>
        <body class="login-bg">
            <div class="box bg-main text-colour">
                <h2>StormCloud Services</h2>
                <a href="/auth/discord" class="discord-login"><p class="text-colour"><ion-icon name="logo-discord" class="va-m"></ion-icon> Login with Discord</p></a>
            </div>
        </body>
    </html>
{{/if}}